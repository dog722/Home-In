<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    tools:context=".HomeIn.PeopleItemDetailActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_list"
        android:layout_above="@+id/linearLayout3" />

    <ImageButton
        android:layout_width="60dp"
        android:background="@drawable/back_bt"
        android:layout_height="60dp"
        android:id="@+id/back_key"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/back_key"
        android:layout_alignStart="@+id/back_key"
        android:id="@+id/linearLayout3"
        android:weightSum="1">

        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/input_comment"
            android:hint="눌러서 댓글 작성"
            android:background="#ffffff"
            android:gravity="center_vertical|left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1.33" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/write_bt"
            android:id="@+id/input_btn" />

    </LinearLayout>

</RelativeLayout>
