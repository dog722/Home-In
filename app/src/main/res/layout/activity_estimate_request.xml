<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    tools:context="kr.co.homein.homeinproject.Estimate.EstimateRequestActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/tab_bg"
                android:id="@+id/toolbar"
                android:titleTextColor="@android:color/black">


            </android.support.v7.widget.Toolbar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="견적 문의(1/5)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />
        </FrameLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/radio_group"
            android:layout_marginTop="175dp"
            android:layout_marginBottom="30dp">

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/rbtn_living"
                android:button="@drawable/estimate1_selector"
                android:checked="false"
                android:layout_marginRight="20dp" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/rbtn_company"
                android:button="@drawable/estimate2_selector"
                android:checked="false"
                android:layout_marginRight="20dp" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/r_btn_part"
                android:button="@drawable/estimate3_selector"
                android:checked="false" />
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="인테리어 할 공간을 선택하세요."
                android:id="@+id/textView28" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/next_bt"
        android:id="@+id/next_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>